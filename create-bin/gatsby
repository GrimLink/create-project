#!/bin/bash

NAME="$1"
TEMPLATE=""
SKIP="false"

PLUGINS=(
  gatsby-source-filesystem
  gatsby-transformer-remark
  @fylgja/utilkit
);

if [[ -z "$NAME" ]]; then
  echo "Gatsby needs a project name" && exit
fi

read -p "Run quick install? [Y/n] " && echo ""
if [[ ! $REPLY =~ ^[nN]|[nN][oO]$ ]]; then
  SKIP="true"
fi;

if [[ $SKIP == "false" ]]; then
  read -p "Add a starter? (leave blank for default): " TEMPLATE;
fi;

npx gatsby new $NAME $TEMPLATE
cd $NAME

if [[ $SKIP == "true" ]]; then
  for i in "${PLUGINS[@]}"; do
    if [[ -f "yarn.lock" ]]; then
      yarn add $i
    else
      npm install $i
    fi
  done;
else
  for i in "${PLUGINS[@]}"; do
    read -p "Also install $i? [Y/n] " && echo ""
    if [[ ! $REPLY =~ ^[nN]|[nN][oO]$ ]]; then
      if [[ -f "yarn.lock" ]]; then
        yarn add $i
      else
        npm install $i
      fi
    fi
  done;
fi

gatsby develop
